<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_adduser"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/back">
    </androidx.appcompat.widget.Toolbar>

    <!--标题-->
    <TextView
        android:id="@+id/tv_adduser_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加邮箱"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <!--输入账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱账号"
            android:textSize="14sp"
            android:textColor="@color/word_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <!--
                让部件的宽度最大化的方法：
                android:layout_width="wrap_content"
                android:layout_weight="1"
            -->
            <EditText
                android:id="@+id/et_adduser_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="example"
                android:background="@null"
                android:textColor="@color/black"/>
            <!--下拉列表-->
            <!--
                entries：Spinner的数据集合是从资源数组adduser_email_address中获取的languages数组资源定义在values/arrays.xml中
                dropDownSelector：设置Spinner的背景
            -->
            <Spinner
                android:id="@+id/sn_adduser_email_address"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_gray"
                android:dropDownSelector="@color/adduser_spinner"
                android:entries="@array/adduser_email_address"
                android:popupBackground="@drawable/rect_gray"/>
        </LinearLayout>
        <!--分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_gray"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--输入密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="14sp"
            android:textColor="@color/word_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_adduser_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:hint="登录密码"
                android:background="@null"
                android:textColor="@color/black"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/bt_adduser_hide_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/adduser_detail_hide_password"
                    android:onClick="onClick"/>
                <ImageView
                    android:id="@+id/bt_adduser_show_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/adduser_detail_show_password"
                    android:onClick="onClick" />
            </RelativeLayout>
        </LinearLayout>
        <!--分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_gray"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--添加按钮-->
    <!--
        部件固定在底部的方法：
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/bt_adduser_add_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@color/button_blue"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>