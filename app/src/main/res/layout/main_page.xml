<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainPageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_gray"
            android:showDividers="middle">
            <!--Toolbar-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_address_book"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingLeft="5dp"
                android:paddingRight="18dp"
                android:background="@color/white"
                app:navigationIcon="@drawable/main_page_toolbar_head_portrait"
                app:popupTheme="@style/ToolbarMenuStyle">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="邮箱"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_address_book_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/main_page_toolbar_write_email"
                    android:onClick="onClick"
                    />
                <ImageView
                    android:id="@+id/iv_main_page_toolbar_search"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:background="@drawable/main_page_toolbar_search"
                    android:layout_marginRight="24dp"
                    android:onClick="onClick"
                    />
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <!--ViewPager菜单-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/vp_main_page_inbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件箱"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="12dp"
                android:onClick="onClick"/>
            <TextView
                android:id="@+id/vp_main_page_outbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发件箱"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:onClick="onClick"/>
            <TextView
                android:id="@+id/vp_main_page_drafts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="草稿箱"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:onClick="onClick"/>
            <TextView
                android:id="@+id/vp_main_page_dustbin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="废纸篓"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:onClick="onClick"/>
            <TextView
                android:id="@+id/vp_main_page_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:onClick="onClick"/>
        </LinearLayout>

        <!--用于标记用的正方形-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="@drawable/viewpager_sign"/>
        </LinearLayout>

        <!--分割线-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_gray"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_page_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>