<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--设置activity_main页面的Toolbar菜单样式-->
    <style name="ToolbarMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <!--设置菜单的字体大小-->
        <item name="android:textSize">16sp</item>
        <!--设置菜单的字体颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置左内边距、上内边距、下内边距-->
        <item name="android:paddingLeft">1dp</item>
        <!--<item name="android:paddingTop">0.5dp</item>-->
        <!--<item name="android:paddingBottom">0.5dp</item>-->
        <!--设置actionbar高度-->
        <item name="actionBarSize">90dp</item>
    </style>
</resources>